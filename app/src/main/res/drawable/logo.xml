<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4078C0" />
            <size
                android:width="150dp"
                android:height="150dp" />
        </shape>
    </item>
    <!-- Inner circle -->
    <item
        android:left="15dp"
        android:top="15dp"
        android:right="15dp"
        android:bottom="15dp">
        <shape android:shape="oval">
            <solid android:color="#1F2024" />
        </shape>
    </item>
</layer-list>